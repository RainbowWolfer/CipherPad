<base:ApplicationBase
	x:Class="CipherPad.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:base="RW.Base.WPF"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:hc="https://handyorg.github.io/handycontrol"
	xmlns:local="clr-namespace:CipherPad"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<base:ApplicationBase.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>

				<!-- !!!!!!!!!!!!!! -->
				<!-- Only for code hint, dont use in release mode -->
				<ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Basic/Colors/Dark.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
				<!-- !!!!!!!!!!!!!! -->

				<hc:ThemeResources UsingSystemTheme="True"/>
				<hc:Theme/>

				<ResourceDictionary Source="/Resources/Generic.xaml"/>


			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</base:ApplicationBase.Resources>

</base:ApplicationBase>
